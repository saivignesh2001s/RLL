@model PROD.Models.searchdates

@{
    ViewBag.Title = "Search";
}

</br>
<p>
    @Html.ActionLink("Pastrentals", "Pastrentals", null, new { @class = "btn btn-info btn-large"}) |
    @Html.ActionLink("Furtherrentals", "Presenttrentals", null, new { @class = "btn btn-info btn-large"})

</p>
<h2>Rent Your Car now</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RentDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RentDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReturnDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReturnDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReturnDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
                <p style="color:red">@ViewBag.Message33</p>
                <p style="color:red">@ViewBag.Message13</p>
                <p style="color:red">@ViewBag.Message14</p>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
