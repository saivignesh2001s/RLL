@model PROD.Models.CAR

@{
    ViewBag.Title = "Create";
}

<h2>Add Car</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Carid, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Carid, new { htmlAttributes = new { @class = "form-control", placeholder = "enter carid" } })
            @Html.ValidationMessageFor(model => model.Carid, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Carname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Carname, new { htmlAttributes = new { @class = "form-control", placeholder = "enter carname" } })
            @Html.ValidationMessageFor(model => model.Carname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CarType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CarType", new List<SelectListItem>
                {
                new SelectListItem{ Text="Luxury", Value = "Luxury" },
                new SelectListItem{ Text="SUV", Value = "SUV" },
                new SelectListItem{ Text="Suden", Value = "Suden" },
                new SelectListItem{ Text="Compact", Value = "Compact" }
            }, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.CarType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PerDayCharge, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PerDayCharge, new { htmlAttributes = new { @class = "form-control", placeholder = "enter perdaycharge" } })
            @Html.ValidationMessageFor(model => model.PerDayCharge, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ChargePerKm, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ChargePerKm, new { htmlAttributes = new { @class = "form-control", placeholder = "enter perchargekm" } })
            @Html.ValidationMessageFor(model => model.ChargePerKm, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Available, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Available, new { htmlAttributes = new { @class = "form-control", placeholder = "enter available" } })
            @Html.ValidationMessageFor(model => model.Available, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
    @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { Type = "file" , placeholder = "enter image location string" } })
        @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Car" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-large" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
